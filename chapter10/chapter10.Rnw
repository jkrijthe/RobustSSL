  ggplot(aes(x=X1,y=X2,color=Class)) +
  geom_point(size=0.3) +
  facet_wrap(~Dataset, ncol=3,scales="free") +
  coord_equal() +
  theme_minimal(base_size = 14, base_family="Palatino") +
